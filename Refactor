// Bảng giảm giá theo loại sản phẩm
const DISCOUNT_BY_TYPE = {
    electronics: 0.10,
    clothing: 0.20,
    food: 0.05,
};

// Lấy phần trăm giảm giá theo loại
function getTypeDiscount(product) {
    return DISCOUNT_BY_TYPE[product.type] || 0;
}

// Giảm giá theo số lượng mua
function getQuantityDiscount(product) {
    return product.quantity > 10 ? 5 : 0;
}

// Giảm giá cho thành viên
function getMemberDiscount(product) {
    return product.isMember ? 10 : 0;
}

// Hàm tính giá sau giảm giá
function calculatePrice(product) {
    let price = product.price;

    // Giảm giá theo loại sản phẩm
    price -= price * getTypeDiscount(product);

    // Giảm giá theo số lượng
    price -= getQuantityDiscount(product);

    // Giảm giá thành viên
    price -= getMemberDiscount(product);

    return price;
}
